# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/trusty64"
  config.vm.provision "shell", inline: <<-SHELL
    export SUDO_GID=
    export SUDO_COMMAND=
    export SUDO_USER=
    export SUDO_UID=
    export HOME=/root

    curl https://deb.nodesource.com/setup_10.x | bash -
    apt-get install nodejs -y
    npm i -g http-server pkg
    cd /vagrant
    npm i
    bash test/test.sh
  SHELL
end
